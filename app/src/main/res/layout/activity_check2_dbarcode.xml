<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/refreshLaout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Check2DBarcodeActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan 2D Barcode :"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:ems="16"
                android:fontFamily="cursive"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:text="Scan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="จำนวนที่ต้องตรวจสอบ :"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/amountAsset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/red2"
                android:textSize="20dp" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" ชิ้น"
            android:textSize="20dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_assetCheck"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scrollbars="vertical"
            android:clipToPadding="false">
        </android.support.v7.widget.RecyclerView>

        <RadioButton
            android:id="@+id/radioDeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชำรุด" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="อื่นๆ :"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/editProblem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="11"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/btnSaveProblem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บันทึก"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnmainmenu2DBarcodeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "80dp"
            android:text="back main menu"
            android:textColor="@color/purple" />

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.v4.widget.SwipeRefreshLayout>
